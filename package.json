{
	"name": "nvm-timologio",
	"version": "1.1.2",
	"description": "WooCommerce Plugin for Timologio",
	"license": "GPL-2.0-or-later",
	"scripts": {
		"php:lint": "composer-runner lint",
		"php:fix": "composer-runner fix",
		"php:compat": "composer-runner compat",
		"js:lint": "eslint js/**/*.js",
		"js:fix": "eslint js/**/*.js --fix",
		"css:lint": "stylelint css/**/*.css",
		"css:fix": "stylelint css/**/*.css --fix",
		"lint": "npm run php:lint && npm run js:lint && npm run css:lint",
		"fix": "npm run php:fix && npm run js:fix && npm run css:fix",
		"copy": "composer dumpautoload -o --no-dev && grunt copy:all",
		"build": "composer dumpautoload -o --no-dev && grunt build",
		"watch": "composer dumpautoload -o && grunt watch:all"
	},
	"devDependencies": {
		"@woocommerce/eslint-plugin": "^2.3.0",
		"@wordpress/eslint-plugin": "^22.0.0",
		"@wordpress/stylelint-config": "^23.6.0",
		"eslint": "^9.17.0",
		"grunt": "^1.6.1",
		"grunt-contrib-clean": "^2.0.0",
		"grunt-contrib-compress": "^2.0.0",
		"grunt-contrib-copy": "^1.0.0",
		"grunt-contrib-watch": "^1.1.0",
		"node-composer-runner": "^0.4.0",
		"stylelint": "^16.12.0"
	},
	"dependencies": {
		"@wordpress/interactivity": "^6.15.0"
	}
}
